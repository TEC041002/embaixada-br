<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Definindo um appender para saída no console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Definindo o nível de log para o root -->
    <root level="INFO"> <!-- Altere de DEBUG para INFO -->
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
